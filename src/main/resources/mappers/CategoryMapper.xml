<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.finaltask.mapper.CategoryMapper">
<!--     搜索二级分类-->
    <select id="selectCategoryByType" resultType="org.example.finaltask.pojo.vo.CategoryVO">
        SELECT id, name
        FROM category
        WHERE type = #{type}
        AND level = 2
    </select>
</mapper>